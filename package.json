{
  "template": {
    "mergers": [
      {
        "type": "Travis",
        "pattern": ".travis.yml"
      },
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Build Status",
              "icon": "https://secure.travis-ci.org/{{github.user}}/{{github.repo}}.png",
              "url": "http://travis-ci.org/{{github.user}}/{{github.repo}}",
              "order" : 0.2
            }
          ]
        }
      }
    ]
  }
}
